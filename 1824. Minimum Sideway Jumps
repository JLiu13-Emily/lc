class Solution {
    public int minSideJumps(int[] obstacles) {
        int n = obstacles.length;
        int[][] dp = new int[500001][4];
        dp[0][2] = 0;
        dp[0][1] = dp[0][3] = 1;
        for(int i = 1; i < n; i++){
            int obj = obstacles[i];
            int min = Integer.MAX_VALUE;
            for(int j = 1; j <= 3; j++){
                if(obj == j){
                    dp[i][j] = Integer.MAX_VALUE;
                }
                else{
                    dp[i][j] = dp[i - 1][j];
                }
                min = Math.min(min, dp[i][j]);
            }
            
            for(int j = 1; j <= 3; j++){
                if(j != obj && dp[i][j] != min){
                    dp[i][j] = min + 1;
                }
            }
        }
        int res = Integer.MAX_VALUE;
        for(int j = 1; j <= 3; j++){
            res = Math.min(res, dp[n - 1][j]);
        }
        return res;
    }
}
