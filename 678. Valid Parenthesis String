class Solution {
    public boolean checkValidString(String s) {
        int max = 0, min = 0;
        char[] chars = s.toCharArray();
        for(char c: chars){
            if(c == '('){
                min++;
                max++;
            }
            else if(c == ')'){
                min--;
                max--;
            }
            else if(c == '*'){
                max++;
                min--;
            }
            if(max < 0) return false;
            min = Math.max(min, 0);
        }
        return min == 0;
    }
}
